<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "01"
    version     = "0.1.1" >

	<name>TuCuatro Songbook</name>
	
	<description>
	  Learn your favorite songs with chord figures at TuCuatro.
	</description>

	<author href="https://tucuatro.com" email="mobile@tucuatro.com">
	  TuCuatro Corp.
	</author>
	
	<preference name="SplashScreenDelay"            value="10000" />
    <preference name="SplashScreen"                 value="screen" />
	

	<!-- Inapp browser plugin. open a native browser window -->
	<plugin name="cordova-plugin-inappbrowser"/>
	
	<!-- Allow links from TuCuatro to open inapp -->
	<plugin name="cordova-plugin-whitelist"/>
	
	<!-- Needed to use a splash screen -->
    <plugin name="cordova-plugin-splashscreen"/>
	
    <plugin name="cordova-plugin-device"/>
	
	<access origin="https://tucuatro.com" subdomains="true" launch-external="no"/>
	
	<allow-navigation href="https://tucuatro.com/*" />
	<allow-intent href="https://tucuatro.com/*" />
	
	<preference name="EnableViewportScale" value="false" />
	<preference name="prerendered-icon" value="true" />
	<preference name="show-splash-screen-spinner" value="true" />
	<preference name="auto-hide-splash-screen"    value="true" />
	<preference name="webviewbounce"              value="false" /> 
	

	<!-- Allow youtube -->
	<preference name="AllowInlineMediaPlayback" value="true" />
	<preference name="MediaPlaybackRequiresUserAction" value="false" />   
	<allow-navigation href="*youtube*" />
	<allow-navigation href="*ytimg*" />
	<allow-navigation href="*youtube-nocookie*" />
	
	
	<!-- Define app icon for each platform. -->
    <icon src="icon.png" />
  	
	
   
	
	
</widget>